<h1> <%= @employee.name() %></h1>

<h4>Assign <%= @employee.name() %> to a Division:</h4>

<form action="/employees/<%= @employee.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <select id = "division_id" class = "" name="division_id" type = "text">
    <% @divisions.each() do |division| %>
      <option value = "<%= division.id() %>"> <%= division.name() %> </option>
    <% end %>
  </select>
  <button class="btn btn-primary active" type="submit" name="add_division">Assign Division</button>

</form>
